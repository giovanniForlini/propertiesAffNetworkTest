<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="">
	<Appenders>
		<RollingFile name="debugLogFile" fileName="./log/debug/testNetworkAffDebug.log"
		  filePattern="./log/archived/debug/$${date:yyyy-MM}/testNetworkAffDebug-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="100 KB"/>
			</Policies>			
			<ThresholdFilter level="DEBUG" />
		</RollingFile>
		<RollingFile name="infoLogFile" fileName="./log/testNetworkAffInfo.log"
		  filePattern="./log/archived/$${date:yyyy-MM}/testNetworkAffInfo-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="100 KB"/>
			</Policies>			
			<ThresholdFilter level="INFO"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="debugLogFile"/>	
			<AppenderRef ref="infoLogFile"/>				
		</Root>
	</Loggers>
</Configuration>